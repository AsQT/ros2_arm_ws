<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">
    
    <xacro:arg name="use_sim" default="false" />
    <xacro:arg name="initial_positions_file" default="$(find robot_moveit)/config/initial_positions.yaml" />

    <xacro:include filename="$(find robot)/urdf/robot.xacro" />
    <xacro:include filename="$(find robot)/urdf/robot.ros2_control.xacro" />
    <xacro:include filename="$(find robot)/urdf/gazebo.xacro" />
    
    <xacro:robot_ros2_control name="robot" initial_positions_file="$(arg initial_positions_file)" use_sim="$(arg use_sim)" />

</robot>